        // GET: Notifications
        public ActionResult Index( bool? Status)
        {
            if (Status == null)
            {
                Status = false;
            }
            if (Status == false)
            {
                ViewBag.Status = false;
                var list = new NotificationsBCL().GetAll().Where(x => x.status == false);
                return View(list);
            }
            else
            {
                ViewBag.Status = true;
                var list = new NotificationsBCL().GetAll().Where(x => x.status == true);
                return View(list);
            }
        }

