@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<StudentObjects> LstStudent = (List<StudentObjects>)ViewBag.ListStudent;
    if(ViewBag.id_Course!= null)
    {
    Guid ClassID = (Guid)ViewBag.id_Course;
