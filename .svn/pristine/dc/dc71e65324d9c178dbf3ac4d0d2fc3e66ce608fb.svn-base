        [HttpPost]
        public JsonResult Account_Delete(Guid UserId)
        {
            try
            {
                new AccountBCL().Delete(UserId);
            }
            catch (Exception e)
            {
                return Json(new { result = false, message = "Đã có lỗi xảy ra!" });
            }
            return Json(new { result = true, message = "Xóa danh mục thành công!" });
        }

        
