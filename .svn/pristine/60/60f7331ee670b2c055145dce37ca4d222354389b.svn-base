        public ActionResult GetListByCoursesId(Guid? coursesId)
        {
            var list = new CoursesJournalBCL().GetJoin().OrderByDescending(q => q.DayOf.GetValueOrDefault()).Where(x => x.CoId.Equals(coursesId)).ToList();
            return PartialView(list);
